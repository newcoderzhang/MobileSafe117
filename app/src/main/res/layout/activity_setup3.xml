<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:androidqian="http://schemas.android.com/apk/res/com.huilong.zhang.mobilesafe117"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.huilong.zhang.mobilesafe117.View.Setup1Activity">

    <TextView
        android:id="@+id/tent_set"
        android:text="3.设置安全号码"
        style="@style/TitleSytle" />


    <TextView
        style="@style/ContentSytle"
        android:text="SIM卡变更后"
        />

    <TextView
        style="@style/ContentSytle"
        android:text="报警短信会发送给安全号码"
        />
    <EditText
        android:id="@+id/number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="请输入或者安全号码"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="选择联系人"
        android:background="@drawable/btn_light_green_selector"
        android:id="@+id/select"
        android:nestedScrollingEnabled="true"
        android:onClick="select" />






    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_online"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@android:drawable/presence_invisible"/>
    </LinearLayout>





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center_horizontal">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageView"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:src="@mipmap/phone"/>
        <Button
            style="@style/PreviousStyle" />

        <Button
            style="@style/NextStyle" />
    </RelativeLayout>

</LinearLayout>

